<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Título del Evento -->
        <TextView
            android:id="@+id/tv_event_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del Evento"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Fecha del Evento -->
        <TextView
            android:id="@+id/tv_event_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: 2024-01-01"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Descripción del Evento -->
        <TextView
            android:id="@+id/tv_event_detail_description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_event_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esta es una descripción detallada de lo que sucedió en el evento."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginBottom="16dp"/>

        <!-- Tipo de Evento -->
        <TextView
            android:id="@+id/tv_event_detail_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Evento:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_event_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIPO"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>