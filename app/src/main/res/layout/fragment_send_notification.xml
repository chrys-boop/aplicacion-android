<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título de la notificación" />

    <EditText
        android:id="@+id/et_notification_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Mensaje de la notificación"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <Button
        android:id="@+id/btn_send_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Enviar Notificación" />

</LinearLayout>
