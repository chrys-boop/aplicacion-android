<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="metro.plascreem.UploadDocumentsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carga de Manuales y Documentos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#303F9F"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Utilice este módulo para subir manuales, diagramas, formatos (PDF, DOCX, XLSX, PPTX)."
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_subir_documento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Archivo y Subir"
        android:padding="16dp"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:drawableStart="@android:drawable/ic_menu_upload"
        android:drawablePadding="10dp"
        android:layout_marginBottom="24dp"/>

    <!-- Área de estado/progreso -->
    <TextView
        android:id="@+id/tv_file_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado: Ningún archivo en cola."
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#E8EAF6"/>

</LinearLayout>