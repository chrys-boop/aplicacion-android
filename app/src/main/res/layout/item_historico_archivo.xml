<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_file_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_upload"
            android:contentDescription="Icono de archivo"
            app:tint="@color/design_default_color_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_historico_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Informe de Subida Mensual.pdf"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/iv_file_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_descargar" />

        <TextView
            android:id="@+id/tv_historico_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Subido por: Juan (Enlace) | Hora: 10:45 AM"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/tv_historico_nombre"
            app:layout_constraintTop_toBottomOf="@id/tv_historico_nombre"
            app:layout_constraintEnd_toStartOf="@id/btn_descargar" />

        <ImageButton
            android:id="@+id/btn_descargar"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/stat_sys_download"
            android:contentDescription="Descargar archivo"
            app:tint="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>