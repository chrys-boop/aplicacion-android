<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".SendMessageFragment"
    android:padding="16dp">

    <!-- Tarjeta Principal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:id="@+id/tv_title_send_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar Mensaje Directo"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="12dp" />

            <!-- Selector de Rol -->
            <TextView
                android:id="@+id/tv_role_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Seleccionar Rol del Destinatario"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_role"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner_user_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Selector de Usuario -->
            <TextView
                android:id="@+id/tv_user_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Seleccionar Usuario Específico"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner_select_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de Mensaje -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_message"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:boxStrokeColor="?attr/colorPrimary"
                app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Body2"
                app:startIconDrawable="@drawable/ic_message">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe tu mensaje aquí..."
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:gravity="top|start"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botones de Acción -->
            <LinearLayout
                android:id="@+id/ll_action_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_message"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enviar Mensaje"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/ic_message"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_alert"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enviar Alerta"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/ic_alert"
                    app:iconPadding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Indicador de Progreso -->
    <ProgressBar
        android:id="@+id/progress_bar_send"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
