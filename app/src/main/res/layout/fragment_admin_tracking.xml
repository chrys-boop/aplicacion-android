<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AdminTrackingFragment">

    <ProgressBar
        android:id="@+id/progress_bar_admin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_title_tracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Histórico y Gestión Documental"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_select_user_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Usuario:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_tracking"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/spinner_select_user"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                app:layout_constraintTop_toBottomOf="@id/tv_select_user_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_after_spinner"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_select_user" />


            <TextView
                android:id="@+id/tv_plantillas_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Plantillas y Manuales Fijos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/divider_after_spinner"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/ll_plantillas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_plantillas_header">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_plantilla_formato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descargar: Formato de Reporte de Incidencias (.xlsx)"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textAlignment="viewStart"
                    app:icon="@android:drawable/ic_menu_save" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_plantilla_diagrama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver: Diagrama General de Flujo (PDF)"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textAlignment="viewStart"
                    app:icon="@android:drawable/ic_menu_view" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/ll_plantillas" />

            <TextView
                android:id="@+id/tv_historico_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Documentos Subidos por el Usuario Seleccionado"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_historico_archivos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_historico_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_file" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>