<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="24"
    android:viewportHeight="24">

  <!-- Círculo exterior con degradado dinámico -->
  <path
      android:pathData="M12,2a10,10 0 1,1 0,20a10,10 0 1,1 0,-20z">
    <aapt:attr name="android:fillColor">
      <gradient
          android:type="radial"
          android:centerX="12"
          android:centerY="12"
          android:gradientRadius="12">
        <item android:offset="0" android:color="?attr/colorPrimaryContainer"/>
        <item android:offset="1" android:color="?attr/colorPrimary"/>
      </gradient>
    </aapt:attr>
  </path>

  <!-- Flecha de descarga -->
  <path
      android:pathData="M12,6v6H9l3,3l3,-3h-3V6z"
      android:fillColor="?attr/colorOnPrimaryContainer"/>

  <!-- Línea base -->
  <path
      android:pathData="M6,17h12v1.5H6z"
      android:fillColor="?attr/colorOnPrimaryContainer"/>
</vector>
